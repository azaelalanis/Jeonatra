<h1>Lista de temas</h1>
<div class="row">
  <div class="col-md-8">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th width="10%">#</th>
          <th width="70%">Nombre</th>
          <th width="20%">Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @topics.each do |topic|%>
        <tr>
          <td><%= topic.id%></td>
          <td><%= topic.name %></td>
          <td><a href="<%= topic.edit_url%>" class="btn btn-primary btn-xs">Editar</a> <a href="<%= topic.delete_url%>" class="btn btn-primary btn-xs">Borrar</a></td>
        </tr>
        <% end %>

      </tbody>
    </table>
    <br>
    <div class="form-group">
      <label class="control-label" for="focusedInput">Agregar Tema</label>
      <input class="form-control" id="focusedInput" type="text" value="Agregar nuevo tema...">
    </div>
    <br>
    <a href="/topics" class="btn btn-primary">Agregar</a>
  </div>
</div>
