<h1>Categorias por tema</h1>
<div class="row">
  <div class="col-md-8">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th width="10%">#</th>
          <th width="70%">Nombre</th>
          <th width="20%">Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category|%>
        <tr>
          <td><%= category.id%></td>
          <td><a href="/categories/<%= category.id%>/clues"><%= category.name%></a></td>
          <td><a href="<%= category.edit_url%>" class="btn btn-primary btn-xs">Editar</a> <a href="<%= category.delete_url%>" class="btn btn-primary btn-xs">Borrar</a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="form-group">
      <label class="control-label" for="focusedInput">Agregar Categoria</label>
      <input class="form-control" id="focusedInput" type="text" value="Agregar nueva categoria...">
    </div>
    <br>
    <a href="#" class="btn btn-primary">Agregar</a>
  </div>
</div>
